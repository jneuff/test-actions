{
    "include-component-in-tag": true,
    "tag-separator": "@",
    "separate-pull-requests": true,
    "always-update": true,
    "packages": {
        ".": {
            "package-name": "image",
            "release-type": "simple",
            "changelog-sections": [
                {
                    "type": "feat",
                    "section": "Features"
                },
                {
                    "type": "fix",
                    "section": "Bug Fixes"
                },
                {
                    "type": "perf",
                    "section": "Performance Improvements"
                },
                {
                    "type": "deps",
                    "section": "Dependencies"
                }
            ]
        }
    }
}